    <script>
        'use strict';
        //Задание 1
        let cel = +prompt('Введите температуру по Цельсию');
        let far = (9 / 5) * cel + 32;
        alert(`${cel} градусов по Цельсию - это ${far} градусов по Фаренгейту`);
        //Задание 2
        let name = 'Василий';
        let admin = name;
        console.log(admin);
        //		
        //Задание 3
        console.log(10 + 10 + '10');
        /*10+10 = 20 складываются как числа
        20+'10'=2010 складываются как строки,так как если хотя бы один операнд является строкой, то второй будет также преобразован к строке
        */
        console.log(10 + '10' + 10);
        /*10+"10" = 1010 первая 10 преобразуется в строку и складываются как стооки как числа
        "1010"+10=101010 складываются как строки
        */
        console.log(10 + 10 + +'10');
        /*10+10 = 20 
        +"10"=10 унарный плюс преобразует строку к числу
        20+10 = 30 сложение чисел
        */
        console.log(10 / -"");
        /*-Infinity - деление на пустую строку дает Infinity и унарный минус дает -
         */
        console.log(10 / +"2.5");
        /*по приоритету сначала унарный плюс преоюразует 2.5 из строки в число
        10/2.5 = 4 - числовое деление
        */
